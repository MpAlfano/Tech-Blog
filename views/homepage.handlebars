<div class="post">
    {{#each posts as |post| }}
    <div class="row">
        <div class="col align-self-start col-sm-4">
            <span>by {{user.name}} on {{date_created}}.</span>
            <h3><a class="post" href="/post/{{id}}">{{title}}</a></h3>
        </div>
        <div class="col align-self-end">
            <div class="col-md-10">
                <p>
                    {{post.description}}
                </p>
            </div>
        </div>
    </div>

    {{/each}}
</div>