<div class="card-post">
    {{#each posts as |post| }}
    <div class="card-head">
        <div class="col align-self-start col-sm-4">
            <span>by {{user.name}} on {{date_created}}.</span>
            <h3><a class="card-title" href="/post/{{id}}">{{title}}</a></h3>
        </div>
        <div class="col align-self-end">
            <div class="col-md-10 card-desc">
                <p>
                    {{post.description}}
                </p>
            </div>
        </div>
    </div>

    {{/each}}
</div>