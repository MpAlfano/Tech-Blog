{{#each posts as |post| }}
<div class="row mb-4 post">
    <div class="col-md-5">
        <span>by {{user.name}} on {{date_created}}.</span>

        <h3><a class="header" href="/post/{{id}}">{{title}}</a></h3>
    </div>
    <div class="col-md-7">
        <p>
            {{post.description}}
        </p>
    </div>
</div>
{{/each}}