<div class="row mb-4 post">
    <div class="col-md-5">
        <span>by {{user.name}} on {{date_created}}.</span>

        <h3>{{title}}</a></h3>
    </div>
    <div class="col-md-7">
        <p>
            {{this.description}}
        </p>
    </div>
</div>
<div class="row mb-4 post">

    {{#each comments as |comment| }}
    <div class="row">
        <div class="col align-self-start col-sm-4">
            <span>by {{user.name}} on {{date_created}}.</span>
            <h3><a class="post" href="/post/{{id}}">{{title}}</a></h3>
        </div>
        <div class="col align-self-end">
            <div class="col-md-10">
                <p>
                    {{comment.description}}
                </p>
            </div>
        </div>
    </div>
    {{/each}}

</div>
{{#if logged_in}}
<div class="comment card">
    <form class="comment">
        <h2 class=>Add a comment</h2>
        <div class="body">
            <div>
                <textarea name="comment-desc" id="comment-desc"></textarea>
            </div>
            <div>
                <button type="submit" class="btn" id="comment">Add comment</button>
            </div>
        </div>
    </form>
</div>
{{else}}
<h4><a href="/login" </a>Log in to add a comment</h4>
{{/if}}

<script src="/js/comment.js"></script>